@model InchirieriMasini.Models.ViewModels.CosVM

<form method="post">
<div class="row m-5 px-5">
    <div class="col-6">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="@Model.Cos.Masina.ImagineMasina1" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="@Model.Cos.Masina.ImagineMasina2" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="@Model.Cos.Masina.ImagineMasina3" class="d-block w-100" alt="...">
            </div>
          </div>
        </div>
    </div>
    <div class="col-6" method="post">
        <input asp-for="@Model.Cos.IdMasina" hidden/>
        <div class="card border-1 p-3" style="width: 35rem;">
          <div class="card-body">
            <h5 class="card-title">@Model.Cos.Masina.MarcaMasina.DenumireMarca</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Cos.Masina.ModelMasina</h6>
            <div class="row">
                <div class="mb-3 col-6">
                    <label asp-for="@Model.Cos.DataInceput" class="form-label">Data Inceput</label>
                  <input asp-for=@Model.Cos.DataInceput type="date" class="form-control" aria-describedby="date-design-prepend" id="DataInceput">
                  <span asp-validation-for="Cos.DataInceput" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="@Model.Cos.DataSfarsit" class="form-label">Data Sfarsit</label>
                  <input asp-for=@Model.Cos.DataSfarsit type="date" class="form-control" aria-describedby="date-design-prepend" id="DataSfarsit">
                  <span asp-validation-for="Cos.DataSfarsit" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="@Model.Cos.IdLocatie">Locatie</label>
                <select asp-for="@Model.Cos.IdLocatie" asp-items="@Model.ListaLocatii" class="form-select">
                <option disabled selected>--Selectati Locatia--</option>
                </select>
                <span asp-validation-for="Cos.IdLocatie" class="text-danger"></span>
                </div>
                <div><button type="submit" class="btn btn-primary mt-2">Inchiriaza</button></div>
            </div>
          </div>
        </div>
    </div>
</div>
        <div>
            <div class="row mx-5 px-5">
                <div class="col-6 text-center">
                   <h2> @Model.Cos.Masina.MarcaMasina.DenumireMarca @Model.Cos.Masina.ModelMasina </h2>
                    <div class="row justify-content-center align-content-center">
                       <div class="card p-2 m-2 col-md-7 col-12">  <div class="d-flex flex-column"><span> <img src="@Url.Content("~/Imagini/Icons/Year.png")" style="max-width:40px"/> An fabricatie </span> <span class="fs-3 fw-bold text-center">@Model.Cos.Masina.AnFabricatie </span></div></div>
                       <div class="card p-2 m-2 col-md-7 col-12">  <div class="d-flex flex-column"><span> <img src="@Url.Content("~/Imagini/Icons/Usa.png")" style="max-width:40px"/> Numar usi </span> <span class="fs-3 fw-bold text-center">@Model.Cos.Masina.NumarUsi </span></div></div>
                       <div class="card p-2 m-2 col-md-7 col-12">  <div class="d-flex flex-column"><span> <img src="@Url.Content("~/Imagini/Icons/Combustibil.png")" style="max-width:40px"/> Tip combustibil </span> <span class="fs-3 fw-bold text-center">@Model.Cos.Masina.TipCombustibil </span></div></div>
                       <div class="card p-2 m-2 col-md-7 col-12">  <div class="d-flex flex-column"><span> <img src="@Url.Content("~/Imagini/Icons/Schimbator.png")" style="max-width:40px"/> Tip cutie viteza </span> <span class="fs-3 fw-bold text-center">@Model.Cos.Masina.TipCutieViteza </span></div></div>
                       <div class="card p-2 m-2 col-md-7 col-12">  <div class="d-flex flex-column"><span> <img src="@Url.Content("~/Imagini/Icons/Weight.png")" style="max-width:40px"/> Masa totala </span> <span class="fs-3 fw-bold text-center">@Model.Cos.Masina.MasaTotala </span></div></div>
                    </div>
                </div>
                <div class="col-6 text-center">
                    <div class="row justify-content-center align-content-center">
                  <div class="card p-5 m-2 mt-5 col-md-9 col-12">
                      <span> <img style="max-width:40px" src="@Url.Content("~/Imagini/Icons/Dolar.png")"/> Tarif pe zi</span>
                      <span class="fs-3 fw-bold">@Model.Cos.Masina.TarifPeZi RON</span>  
                  </div>
                  <div class="card p-5 m-2 col-md-9 col-12">
                      <span> <img style="max-width:40px" src="@Url.Content("~/Imagini/Icons/Dolar.png")"/> Tarif pe saptamana</span>
                      <span class="fs-3 fw-bold"><s>@(Model.Cos.Masina.TarifPeZi * 7) RON</s>  @Model.Cos.Masina.TarifPeSaptamana RON</span>  
                  </div>
                  <div class="card p-5 m-2 col-md-9 col-12">
                      <span> <img style="max-width:40px" src="@Url.Content("~/Imagini/Icons/Dolar.png")"/> Tarif pe luna</span>
                      <span class="fs-3 fw-bold"><s>@(Model.Cos.Masina.TarifPeZi * 30) RON</s>  @Model.Cos.Masina.TarifPeLuna RON</span>  
                  </div>
                    </div>    
                </div>
            </div>
        </div>
</form>
