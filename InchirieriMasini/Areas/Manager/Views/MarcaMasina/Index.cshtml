@model IEnumerable<MarcaMasina>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Marci Disponibile
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="MarcaMasina" asp-action="Creare" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Adaugare Marca
            </a>
        </div>
    </div>
    <br /><br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Marca
            </th>
            <th>
                Logo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.DenumireMarca
                </td>
                <td width="30%">
                    <img width=100px src="~/Imagini/MarciMasini/@obj.LogoURL">
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="MarcaMasina" asp-action="Editare" asp-route-id="@obj.IdMarca" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Editare
                        </a>
                        <a asp-controller="MarcaMasina" asp-action="Stergere" asp-route-id="@obj.IdMarca" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Stergere
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>