@page
@model RegisterModel

<div class="row" style="min-height:100vh">
    <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
         <a asp-area="Client" asp-controller="Home" asp-action="Index" style="text-decoration:none;">  <p class="fs-2 m-4 text-dark" style="max-width:300px"> RentalX.</p></a>
   
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="m-5 mt-0 p-5 row justify-content-center align-content-center">
            <p class="fs-2 fw-bold text-dark">Inregistrare</p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating py-2 mt-3">
                <input asp-for="Input.Nume" class="form-control input-line" aria-required="true" />
                <label asp-for="Input.Nume"></label>
                <span asp-validation-for="Input.Nume" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 mt-2">
                <input asp-for="Input.Email" class="form-control  input-line" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
          
            <div class="form-floating py-2 col-6 mt-2">
                <input asp-for="Input.Password" class="form-control  input-line" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-6 mt-2">
                <input asp-for="Input.ConfirmPassword" class="form-control  input-line" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-6 mt-2">
                <input asp-for="Input.PhoneNumber" class="form-control  input-line" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating py-2" hidden>
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected>-Selectati rolul-</option>
                </select>
            </div>
            <div class="text-end">
            <button id="registerSubmit" type="submit" class="btn btn-custom mt-3">Inregistrare</button>
            </div>
    
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-body" style="text-decoration:none;"> Ai deja un cont? <span class="fw-bold text-body"> Loghează-te!</span> </a>
        </form>
    </div>

